#!/bin/sh

# Script for building and packaging
# Usage build-packages [7.0|7.1|7.2|all|{package-name}]

BUILD_PACKAGES="${1:-all}"

packages_others="
argon2
composer
gnu-libiconv
litespeed
phpunit
"

packages_70="
php7.0-apcu
php7.0-composer
php7.0-imagick
php7.0-memcached
php7.0-mongodb
php7.0-phpunit
php7.0-redis
php7.0-sodium
php7.0-swoole
php7.0-xdebug
"

packages_71="
php7.1-apcu
php7.1-composer
php7.1-imagick
php7.1-memcached
php7.1-mongodb
php7.1-phpunit
php7.1-redis
php7.1-sodium
php7.1-swoole
php7.1-xdebug
"

packages_72="
php7.2-apcu
php7.2-composer
php7.2-imagick
php7.2-mcrypt
php7.2-memcached
php7.2-mongodb
php7.2-phpunit
php7.2-redis
php7.2-swoole
"

# To build PHP Pecl extensions and some packages, we'll need some deps from the
# local PHP.earth Alpine repository
abuild-sign -k /home/packager/.abuild/phpearth.rsa.priv /repo/main/x86_64/APKINDEX.tar.gz
sudo apk update

if [ "$BUILD_PACKAGES" = "7.0" ]; then
  packages=$packages_70
elif [ "$BUILD_PACKAGES" = "7.1" ]; then
  packages=$packages_71
elif [ "$BUILD_PACKAGES" = "7.2" ]; then
  packages=$packages_72
elif [ "$BUILD_PACKAGES" = "all" ]; then
  packages="$packages_others $packages_70 $packages_71 $packages_72"
else
  packages="$BUILD_PACKAGES"
fi

for package in $packages; do
  cd /build/main/$package
  rm -rf src pkg

  abuild checksum
  abuild -r -K

  # Generate index with trusted signature
  generate-index main
done
